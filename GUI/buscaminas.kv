#:import SlideTransition kivy.uix.screenmanager.SlideTransition
# import Window kivy.core.window
#:import tr __main__.tr
ScreenManagement:
    transition: SlideTransition()
    MenuScreen:
    LoginScreen:
    RegistroScreen:
    Menu2Screen:
    IdiomaScreen:
    Tablero1:

<ButtonT>:
    Button:
        size_hint:1,1


<BubbleButton>:
    font_size: 16
    size_hint_x: .5
    size_hint_y: .08
    background_color:(1,0,0,1)

<MenuScreen>:
    name: 'menu'
    FloatLayout:
        Image:
            source:"imagenes/fondo1_1.jpg"
            size_hint_y:2.5
            size_hint_x: 2.5
            pos:-50,-350

        Image:
            source:"imagenes/mina2.png"
            width: .1
            size_hint_x: 1
            size_hint_y: 1
            pos: 0,80

        BubbleButton:
            text:tr._('Sign Up')
            pos: 80,140
            on_release: app.root.current = 'registro'

        BubbleButton:
            text: tr._('Sign In')
            pos: 80,60
            on_release: app.root.current = 'login'

        BubbleButton:
            text: tr._('Choice language')
            pos: 80,100
            on_release: app.root.current = 'idioma'

<LoginScreen>:
    name: 'login'

    FloatLayout:
        Image:
            source:"imagenes/fondo1_1.jpg"
            size_hint_y:2.5
            size_hint_x: 2.5
            pos:-50,-350

        Label:
            text: tr._("User name")
            font_size: 16
            pos: 5,0

        TextInput:
            id: txt_username
            size_hint_x: .5
            size_hint_y: .05
            pos: 80,200
            background_color:(0,0,0,.3)
            foreground_color:[1,0,0,1]

        Label:
            text: tr._("Password")
            font_size: 16
            pos:0,-70

        TextInput:
            id: txt_password
            size_hint_x: .5
            size_hint_y: .05
            pos:80,130
            background_color:(0,0,0,.3)
            foreground_color:[1,0,0,1]
            password: True

        BubbleButton:
            text: tr._("Let's play!")
            pos:80,60

            on_release: app.root.current = 'menu2'

        BubbleButton:
            text: tr._("Go back")
            pos:0,450
            on_release: app.root.current = 'menu'

<RegistroScreen>:
    name: 'registro'
    FloatLayout:
        Image:
            source:"imagenes/fondo1_1.jpg"
            size_hint_y:2.5
            size_hint_x: 2.5
            pos:-50,-350

        Label:

            text: tr._("User name")
            font_size: 16
            pos: 5,100

        TextInput:
            id:txt_username
            size_hint_x: .5
            size_hint_y: .05
            pos: 80,300
            background_color:(0,0,0,.3)
            foreground_color:[1,0,0,1]

        Label:
            id:txt_password
            text: tr._("Password")
            font_size: 16
            pos:0,20

        TextInput:
            size_hint_x: .5
            size_hint_y: .05
            pos:80,230
            background_color:(0,0,0,.3)
            foreground_color:[1,0,0,1]

        Label:
            text: tr._("Repeat password")
            font_size: 16
            pos:0,-60

        TextInput:
            size_hint_x: .5
            size_hint_y: .05
            pos:80,150
            background_color:(0,0,0,.3)
            foreground_color:[1,0,0,1]

        BubbleButton:
            text: tr._("Sign Up")
            pos:80,60
            on_press: root.check_label(txt_username.text,txt_password.text)

        BubbleButton:
            text: tr._("Go back")
            pos:0,450
            on_release: app.root.current = 'menu'
            

<Menu2Screen>:
    name:'menu2'
    FloatLayout:
        Image:
            source:"imagenes/fondo1_1.jpg"
            size_hint_y:2.5
            size_hint_x: 2.5
            pos:-50,-350

        BubbleButton:
            text:tr._('Play!')
            pos:80,330
            on_release:app.root.current = 'tablero1'

        BubbleButton:
            text:tr._('Ranking')
            pos:80,250

        BubbleButton:
            text:tr._('Profile')
            pos:80,170

        BubbleButton:
            text:tr._('Sign off')
            pos:80,90

<IdiomaScreen>:
    name: 'idioma'
    FloatLayout:
        Image:
            source:"imagenes/fondo1_1.jpg"
            size_hint_y:2.5
            size_hint_x: 2.5
            pos:-50,-350

        BubbleButton:
            text:tr._('English')
            pos:80,330
            on_release: app.login = "en"

        BubbleButton:
            text:tr._('Spanish')
            pos:80,250
            on_release: app.login = "es"


        BubbleButton:
            text: tr._("Go back")
            pos:0,450
            on_release: app.root.current = 'menu'

